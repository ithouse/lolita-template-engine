- p_name = current_form.parent_builder.object_name
- m_data = current_form.object_name.match(/\[(\d+)\]$/)
- index = m_data && m_data[1]
- param_attrs = params[p_name] && params[p_name]["urls_attributes"] && index && params[p_name]["urls_attributes"][index]
- param_controller = param_attrs && param_attrs["controller"]
- record_controller = param_controller || current_form.object.controller 
- record_action = param_attrs && param_attrs["action"] || current_form.object.action 
= t("or")
= current_form.select :controller, controllers_options_for_select(record_controller), {:include_blank => true},:class => "controller_select"
= current_form.select :action, actions_options_for_select(record_controller, record_action),{:include_blank => true}, :class => "action_select"